<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagemusic"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txt_Title"
        android:padding="5dp"
        android:text="Tên bài hát"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_Disc"
        android:src="@drawable/musicdisc"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="300dp"/>
    <ImageView
        android:id="@+id/iv_previous"
        android:src="@drawable/previous"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/iv_continue"
        android:layout_toEndOf="@+id/iv_previous"
        android:src="@drawable/continuee"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/iv_stop"
        android:src="@drawable/stop"
        android:layout_toEndOf="@+id/iv_continue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/iv_next"
        android:src="@drawable/next"
        android:layout_toEndOf="@+id/iv_stop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"/>

    <SeekBar
        android:id="@+id/sb_Music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_previous"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#79CA1B"
        android:indeterminate="false"
        android:progressTint="#B51D50" />

    <TextView
        android:id="@+id/txt_Time1"
        android:text="00:00"
        android:textColor="#6935B3"
        android:textSize="20sp"
        android:layout_above="@id/sb_Music"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_Time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sb_Music"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="10dp"
        android:text="00:00"
        android:textColor="#6935B3"
        android:textSize="20sp" />


</RelativeLayout>